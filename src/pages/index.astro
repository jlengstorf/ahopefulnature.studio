    </svg>

</div>

  <section class="preview-grid">
    {
      posts
        .sort((a, b) => (a.data.publishedAt > b.data.publishedAt ? -1 : 1))
        .map((post) => (
          <BlogPreview
            path={`/${post.id}`}
            title={post.data.title}
            author={post.data.author}
            description={post.data.description}
            img={post.data.image}
            type={post.data.type}
            topics={post.data.topics}
          />
        ))
    }
  </section>
 
</Layout>

<style>
  .newsletter {
    display: block;
    place-content: center;
    padding-top: 60px;
    padding-right: 20%;
    padding-bottom: 30px;
    padding-left: 20%;
    text-align: center;
  }

  .pear {
    display: flex;
    justify-content: center;
    padding-top: 10px;
    padding-bottom: 50px;
  }

  .preview-grid {
    display: grid;
    gap: 25px;
    grid-template-columns: 300px;
    place-content: center;
  }
</style>


